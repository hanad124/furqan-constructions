datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}


model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String    @unique
  email     String    @unique
  phone     String?
  role      String    @default("user")
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
